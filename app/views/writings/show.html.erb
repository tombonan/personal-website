<% provide(:title, 'Article') %>
<%= render partial: 'writingsheader' %>
<div class = "writing-wrapper">
	<h3 class = "writing-title"><%=@writing.title %></h3>
	<div class = "writing-content">
		<p id = "published-in">
			Originially published in <i><span id = "writing-show-publication"><%= link_to @writing.publication, @writing.publication_link, :target => "_blank"%></span></i> 
		</p>
		<p id = "writing-show-date"><%= @writing.date %></p>
		<p id = "back-link"><%= link_to "Back to all articles", writings_path %></p>
		<p id = "writing-text"><%=@writing.body.html_safe %></p>
	</div>
</div>


